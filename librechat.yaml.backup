version: 1.3.1

cache: true

endpoints:
  custom:
    - name: "re-AI-Radio GPT" # 抽屉的名字
      apiKey: "${OH_MY_GPT_KEY}"
      baseURL: "https://api.ohmygpt.com/v1"
      models:
        fetch: false
        default: 
          - "gpt-4o-mini"
          - "gpt-5.2"
          - "gpt-5-mini"
          - "gpt-4o"
          - "gemini-3-pro-preview"
          - "gemini-3-flash-preview"
          - "gemini-2.5-flash-lite"
          - "grok-4-latest"
          - "grok-4-fast"
          - "grok-4-reasoning"
          - "ark-doubao-seed-1.6-vision-250815"
          - "ark-doubao-seed-1.6-flash-250715"
          - "ark-doubao-seed-1.6-thinking-250715"
          - "claude-haiku-4-5" 
          - "claude-sonnet-4-5" 
          - "claude-3-7-sonnet-latest"
      titleConvo: true
      titleModel: "gpt-4o-mini"
      dropParams: ["user", "stop"] 
      modelDisplayLabel: "re- AI Radio"

    - name: "DeepSeek" # 原生直连
      apiKey: "${DEEPSEEK_API_KEY}"
      baseURL: "https://api.deepseek.com/v1"
      models:
        fetch: false
        default:
          - "deepseek-chat"
          - "deepseek-reasoner"
      titleConvo: true
      modelDisplayLabel: "DeepSeek（原生·分析文件与推理）"

    - name: "Kimi" # 原生直连（月之暗面）
      apiKey: "${KIMI_API_KEY}"
      baseURL: "https://api.moonshot.cn/v1"
      models:
        fetch: false
        default:
          - "moonshot-v1-8k"
          - "moonshot-v1-32k"
          - "moonshot-v1-128k"
          - "kimi-k2-turbo-preview"
          - "kimi-k2-thinking"
      titleConvo: true
      modelDisplayLabel: "Kimi（原生·长文推理）"

# 注册配置 - 限制只允许特定域名的邮箱注册
registration:
  # 允许注册的邮箱域名列表
  # 如果列表为空或不配置,则允许所有域名
  # 支持环境变量: ${ALLOWED_EMAIL_DOMAINS} (逗号分隔)
  allowedDomains:
    - "reload.com.cn"

# 界面行为
interface:
  endpointsMenu: true
  modelSelect: true
